{
  "name": "northern_lights",
  "version": "1.0.0",
  "description": "northern_lights backend",
  "author": "Andrey Sakharov <caxap_8787@mail.ru> (https://www.linkedin.com/in/andrey-sakharov/)",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run build && npm run just_start",
    "just_start": "node ./dist/main.js",
    "build": "(rm -rf dist || npx rimraf dist) && tsc -P tsconfig.build.json && npm run build_front",
    "build_front": "rm -rf static/js/generated && tsc -P tsconfig.front.json && npm run cleanup",
    "cleanup": "rm -rf static/js/promo && mv static/js/front static/js/generated && rm -rf src/promo/system_models/responses/typings.js && node cleanup.js",
    "dev": "cross-env NODE_ENV=dev nodemon",
    "audit": "npm audit | grep 'found' | grep -E 'moderate|high|critical' && exit 1 || exit 0",
    "lint": "tslint --project ./tslint.json | grep -E 'ERROR' && exit 1 || exit 0",
    "migrate": "npm run build && typeorm migration:run",
    "revert": "npm run build && typeorm migration:revert",
    "create": "ts-node ./node_modules/.bin/typeorm migration:create -n"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muturgan/northern_lights.git"
  },
  "bugs": {
    "url": "https://github.com/muturgan/northern_lights/issues"
  },
  "homepage": "https://github.com/muturgan/northern_lights#readme",
  "dependencies": {
    "@nestjs/common": "^7.6.17",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.17",
    "@nestjs/platform-fastify": "^7.6.17",
    "@nestjs/typeorm": "^7.1.5",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.6.0",
    "fastest-validator": "^1.11.0",
    "fastify-cookie": "^5.3.1",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.7",
    "tslib": "^2.2.0",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/serve-static": "^2.1.4",
    "@types/mysql": "^2.15.18",
    "@types/node": "^14.17.0",
    "cross-env": "^7.0.3",
    "fastify-static": "^4.2.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
